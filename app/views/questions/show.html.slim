= render "questions/question"
p = 'Question author: ' +  @question.author.email 

- if @question.author == current_user
  = link_to "Delete", question_path(@question), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }

hr

h3 = 'Answers:'
= render 'answers/answer'

h2 Create New Answer
= render 'answers/form', answer: @answer

= link_to 'Back', questions_path
